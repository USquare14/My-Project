<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cyberknight.android.project">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomeScreen.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AccountManagement.AccountActivity"
            android:parentActivityName=".HomeScreen.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeScreen.MainActivity" />
        </activity>
        <activity
            android:name=".AccountManagement.AnalysisActivity"
            android:label="Analysis"
            android:parentActivityName=".HomeScreen.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeScreen.MainActivity" />
        </activity>
        <activity
            android:name=".AccountManagement.AboutUsActivity"
            android:label="About Us"
            android:parentActivityName=".HomeScreen.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeScreen.MainActivity" />
        </activity>
        <activity
            android:name=".AccountManagement.SettingsActivity"
            android:label="Settings"
            android:parentActivityName=".HomeScreen.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeScreen.MainActivity" />
        </activity>
    </application>

</manifest>